@model EEBank.Models.Banks

@{
    ViewBag.Title = "Delete";
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h2>Удалить филиал</h2>
    </div>
    <div class="modal-body">

        <h3>Вы уверены, что хотите удалить?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Адрес
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Adress)
                </dd>

                <dt>
                    Код банка
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BanckCode)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>