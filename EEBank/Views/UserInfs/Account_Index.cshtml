@model IEnumerable<EEBank.Models.UserInf>

@{
    ViewBag.Title = "Валютные счета";
}
<style>
    body {
        background: url('http://nz4.ru/wp-content/uploads/2014/12/94.jpg');
    }
</style>

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".compItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить валютный счет", "Add_new_account",null, new { @class = "compItem" })
</p>
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<table class="table">
    <tr>
        <th>
            Номер счета
        </th>
        <th>
            Код валюты
        </th>
        
        <th>
            Баланс счета
        </th>
        <th>
            ФИО
        </th>
        <th>
           Email
        </th>
        <th>
            Телефон
        </th>
       
        <th>
            Адрес
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
    @Html.DisplayFor(modelItem => item.AccountNumber)
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.CodeISO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balans) 
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
       
        
        <td>
            @Html.ActionLink("Просмотреть", "Details", new { id = item.UserInfID }, new { @class = "compItem" })
        </td>
    </tr>
}

</table>
